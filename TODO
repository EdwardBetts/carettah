  text <- layoutEmpty ctxt
  text `layoutSetText` "Hello World.\nhoge"
  moveTo 30 40
  showLayout text
  http://hackage.haskell.org/packages/archive/pango/0.11.2/doc/html/Graphics-Rendering-Pango-Layout.html#v:layoutGetExtents
